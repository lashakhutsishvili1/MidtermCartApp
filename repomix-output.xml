package com.example.midtermcartapp

import android.content.Intent
import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import android.widget.Button
import android.widget.TextView

class SuccessScreenActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_success_screen)

        val totalReceived = intent.getIntExtra("ORDER_TOTAL_KEY", 0)
        val orderTotalTxt: TextView = findViewById(R.id.orderTotalTxt)
        orderTotalTxt.text = "Total: ${totalReceived}$"

        val backBtn: Button = findViewById(R.id.backToStartBtn)
        backBtn.setOnClickListener {
            val i = Intent(this, StartScreenActivity::class.java)
            // ან დაასრულე ეს activity და მომხმარებელის შესაძლებლობა მიეცით უკან დაბრუნების გარეშე
            i.addFlags(Intent.FLAG_ACTIVITY_CLEAR_TOP or Intent.FLAG_ACTIVITY_NEW_TASK)
            startActivity(i)
            finish()
        }
    }
}
